{
  "name": "voxel-shooter",
  "private": true,
  "scripts": {
    "format": "prettier -w .",
    "build": "concurrently yarn:build:types yarn:build:game yarn:build:server",
    "build:types": "tsc",
    "build:game": "vite build game --outDir ../dist/game",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "concurrently yarn:dev:game yarn:dev:server",
    "dev:game": "vite game",
    "dev:server": "ts-node --project tsconfig.server.json server/index.ts"
  },
  "dependencies": {
    "@colyseus/schema": "^1.0.38",
    "@colyseus/ws-transport": "^0.14.21",
    "cannon": "^0.6.2",
    "colyseus": "^0.14.23",
    "colyseus.js": "^0.14.13",
    "express": "^4.18.1",
    "schema": "*",
    "three": "^0.144.0"
  },
  "devDependencies": {
    "@types/cannon": "^0.1.8",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "@types/three": "^0.144.0",
    "concurrently": "^7.4.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  }
}
