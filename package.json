{
  "name": "voxel-shooter",
  "private": true,
  "scripts": {
    "format": "prettier -w .",
    "build": "concurrently yarn:build:types yarn:build:game yarn:build:server",
    "build:types": "tsc",
    "build:game": "vite build game --outDir ../dist/game",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "concurrently yarn:dev:game yarn:dev:server",
    "dev:game": "vite game",
    "dev:server": "ts-node-dev --project tsconfig.server.json server/index.ts"
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.24",
    "@colyseus/monitor": "^0.14.22",
    "@colyseus/schema": "^1.0.39",
    "@colyseus/ws-transport": "^0.14.21",
    "cannon-es": "^0.20.0",
    "cannon-es-debugger": "^1.0.0",
    "colyseus": "^0.14.23",
    "colyseus.js": "^0.14.13",
    "cors": "^2.8.5",
    "ecsy": "^0.4.2",
    "express": "^4.18.1",
    "pako": "^2.0.4",
    "three": "^0.144.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.23",
    "@types/pako": "^2.0.0",
    "@types/three": "^0.144.0",
    "concurrently": "^7.4.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  }
}
